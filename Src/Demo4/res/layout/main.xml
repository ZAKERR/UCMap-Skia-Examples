<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<cn.creable.android.demo.MyMapView
		android:id="@+id/mapView" android:layout_width="fill_parent"
		android:layout_height="fill_parent" />
		<LinearLayout android:id="@+id/Toolbar"
   android:layout_height="fill_parent" android:layout_width="fill_parent"
   android:layout_alignParentTop="true" android:gravity="right"  android:background="#0000ffff">
   <ImageView 
		android:id="@+id/ToolButton1" android:background="@drawable/zoomin80"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:layout_gravity="bottom" android:gravity="right">
	</ImageView>
	<ImageView 
		android:id="@+id/ToolButton2" android:background="@drawable/zoomout80"
		android:layout_height="wrap_content" 
		android:layout_width="wrap_content" 
		android:layout_gravity="bottom" android:gravity="right">
	</ImageView>
</LinearLayout>
<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:background="#0000ffff"
        android:gravity="right" >

        <Button
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:gravity="right" android:text="菜单"/>


    </LinearLayout>
</AbsoluteLayout>
